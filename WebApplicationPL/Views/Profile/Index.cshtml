@model WebApplicationPL.Models.ProfileInfoViewModel

@{
    ViewBag.Title = "Profile user " + Model.Login;
}

<div class="container">
    <div class="col-md-offset-2 col-md-8 col-xs-12">
        <h2>@ViewBag.Title</h2>
        <hr />
        <div class="row profile-info-container">
            @Html.Partial("_ProfileInfo", Model)
        </div>
        <hr />
    </div>
</div>

<div class="container">
    @Html.Action("UserPhotos", "Profile", new { userId = Model.UserId, page = ViewBag.CurrentPage })
</div>

@section styles {
    @Styles.Render("~/styles/profile")
}